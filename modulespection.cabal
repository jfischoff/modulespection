                  , FlexibleInstances
  build-depends: base >= 4.6
               , template-haskell >= 2.7
               , ghc-paths == 0.1.*
               , ghc
               , temporary == 1.2.*
               , transformers >= 0.3 && < 0.5
               , exceptions >= 0.5 && < 0.9
               , filepath >= 1.3 && < 1.5
  hs-source-dirs:      src
  default-language:    Haskell2010
